<form method="POST">
  <div class="form-group">
    <label for="">TV-portal name:</label>
    <input value="<%= form.name %>" type="text" class="form-control <%- errors?.name ? 'is-invalid' : '' %>" name="name"
      required>
    <% if (errors?.name) { %>
    <div class="invalid-feedback"><%= errors.name.message %></div>
    <% } %>
  </div>
  <div class="form-group mt-3">
    <label for="">Your slug</label>
    <input value="<%= form.slug %>" type="text" class="form-control <%- errors?.slug ? 'is-invalid' : '' %>" name="slug"
      required>
    <% if (errors?.slug) { %>
    <div class="invalid-feedback"><%= errors.slug.message %></div>
    <% } %>
  </div>
  <div class="form-group mt-3">
    <label for="">Number of movies</label>
    <input value="<%= form.filmsCount %>" type="text" class="form-control <%- errors?.filmsCount ? 'is-invalid' : '' %>" name="filmsCount"
      placeholder="Put a number here">
    <% if (errors?.filmsCount) { %>
    <div class="invalid-feedback"><%= errors.filmsCount.message %></div>
    <% } %>
  </div>
  <button type="submit" class="btn btn-primary mt-3">Add your portal</button>
</form>
