<form method="POST">
  <div class="form-group">
    <label for="">TV-portal name:</label>
    <input type="text" class="form-control" name="name" required>
    <% if (typeof errors !== 'undefined' && errors.name) { %>
    <div class="invalid-feedback">
      <%= errors.name.message %>
    </div>
    <% } %>
  </div>
  <div class="form-group mt-3">
    <label for="">Your slug</label>
    <input type="text" class="form-control" name="slug" required>
  </div>
  <div class="form-group mt-3">
    <label for="">Number of movies</label>
    <input type="text" class="form-control" name="filmsCount" placeholder="Put a number here">
  </div>
  <button type="submit" class="btn btn-primary mt-3">Add your portal</button>
</form>

<% if (typeof errors !== 'undefined') { %>
<div class="alert alert-danger mt-3">
  <ul>
    <% for (let key in errors) { %>
    <li><%= errors[key].message %></li>
    <% } %>
  </ul>
</div>
<% } %>